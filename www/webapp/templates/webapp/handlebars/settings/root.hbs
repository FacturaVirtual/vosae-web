{% load i18n static templatetag_handlebars %}

{% tplhandlebars "settings" %}
  <div class="settings-menu d-cell">    
    <div class="inner">
      <ul class="clearfix">
        <li class="exit">
          {{#link-to "dashboard" controller.session.tenant class="btn"}}
            <i class="picto-arrow-left"></i>&nbsp;{% trans "Return to application" %}
          {{/link-to}}
        </li>
        <li class="module"><strong>{% trans "Global settings" %}</strong></li>
        <li class="links">
          {{#link-to 'settings.application' controller.session.tenant}}{% trans "Application" %}{{/link-to}}
          {{#link-to 'settings.apiKeys' controller.session.tenant}}{% trans "API keys" %}{{/link-to}}
          {{#link-to 'settings.organization' controller.session.tenant}}{% trans "Organization" %}{{/link-to}}
          {{#link-to 'settings.showUsers' controller.session.tenant}}{% trans "Users" %}{{/link-to}}
          {{#link-to 'settings.showGroups' controller.session.tenant}}{% trans "Groups" %}{{/link-to}}
          {{#link-to 'settings.report' controller.session.tenant}}{% trans "Reports" %}{{/link-to}}
        </li>
        <li class="module"><strong>{% trans "Invoicing settings" %}</strong></li>
        <li class="links">
          {{#link-to 'settings.invoicingGeneral' controller.session.tenant}}{% trans "General" %}{{/link-to}}
          {{#link-to 'settings.showTaxes' controller.session.tenant}}{% trans "Taxes" %}{{/link-to}}
          {{#link-to 'settings.numbering' controller.session.tenant}}{% trans "Numbering" %}{{/link-to}}
        </li>
      </ul>
    </div>
  </div>
  <div class="settings-content d-cell">
    <div class="inner">
      {{outlet content}}
    </div>
  </div>
{% endtplhandlebars %}