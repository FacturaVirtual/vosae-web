{% load i18n templatetag_handlebars i18n_handlebars %}

{% tplhandlebars "invoiceBase/show/_date" %}
  <div class="date">
    <label class="text-{{unbound relatedColor}}">
      <i class="picto-agenda"></i>
      {{#if isQuotation}}
        {% trans "Quotation date" %}:
      {{/if}}

      {{#if isPurchaseOrder}}
        {% trans "Purchase order date" %}:
      {{/if}}
      
      {{#or isInvoice isDownPaymentInvoice}}
        {% trans "Invoicing date" %}:
      {{/or}}
      
      {{#if isCreditNote}}
        {% trans "Emission date" %}:         
      {{/if}}
    </label>
    <span>
      {{#if isQuotation}}
        {{unbound currentRevision.displayQuotationDate}}
      {{/if}}

      {{#if isPurchaseOrder}}
        {{unbound currentRevision.displayPurchaseOrderDate}}
      {{/if}}
      
      {{#or isInvoice isDownPaymentInvoice}}
        {{unbound currentRevision.displayInvoicingDate}}
      {{/or}}
      
      {{#if isCreditNote}}
        {{unbound currentRevision.displayCreditNoteEmissionDate}}          
      {{/if}}
    </span>
  </div>
{% endtplhandlebars %}